<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:background="@color/baj"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".appetizers_fragments"
    >

    <TextView
        android:id="@+id/textView122"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="APPETIZERS"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FOUR CHEESE GARLIC BREAD"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="6$"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Toasted French bread topped with\nromano chedder, jack and parmesan" />

        <TextView
            android:id="@+id/textViewcheese"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_min_cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:background="@drawable/button_menu_order_shape"
            />

        <Button
            android:id="@+id/button_add_cheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/button_menu_order_shape"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FRENCH FRIES"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="7$"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hand cut wedges of Gold potatoes" />

        <TextView
            android:id="@+id/textView_fries"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_min_fries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:background="@drawable/button_menu_order_shape"
            />

        <Button
            android:id="@+id/button_add_fries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/button_menu_order_shape"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView181"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="STUFFED MUSHROOMS"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="9$"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mashrooms caps baked with a \n filling of tree choice cheeses calm" />

        <TextView
            android:id="@+id/textView_mushroom"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_min_mushroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:background="@drawable/button_menu_order_shape"
            />

        <Button
            android:id="@+id/button_add_mushroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/button_menu_order_shape"
            />




    </LinearLayout>



</LinearLayout>