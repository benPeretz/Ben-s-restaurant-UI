<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reser_pic"
    android:orientation="vertical"
    tools:context=".reservation">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Reserve a seat"
        android:textSize="55sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPicker"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_menu_order_shape"
            android:text="Select date"

            />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="amount of people"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_min1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@drawable/button_amount_people"
            android:fontFamily="sans-serif-black"

            android:text="-1"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/viewAmountPeople"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="0"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button_add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="@drawable/button_amount_people"
            android:fontFamily="sans-serif-black"

            android:text="+1"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Smoking area?"
            android:textSize="28sp" />

        <Switch
            android:id="@+id/switch_smoke"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:paddingTop="5dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="145dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/cigarette_cartoon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/new_pic" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Would you like to pre-order\n appetizers and drinks?\n\nPUSH:\nCONTINUE RESEVATION"
            android:textColor="#AA7900"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_finish_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_menu_order_shape"
            android:text="Finish\nreservation" />

        <Button
            android:id="@+id/button_countinue_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_menu_order_shape"
            android:text="continue\n reservation" />
    </LinearLayout>
</LinearLayout>