<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="370dp"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".sumUp_fragment"
    android:background="@color/baj"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_margarita"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"

            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="EL CAMINO MARGARITA ->"
            android:textSize="20sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textView_sumup_margarita"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_sunsetSoda"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="SUNSET SODA ->"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/textView_sumup_sunsetSoda"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_stami"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="STAMI ->"

            android:textSize="20sp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/textView_sumup_stami"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_cheese"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:paddingLeft="10dp"
            android:text="FOUR CHEESE GARLIC BREAD ->"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView_sumup_cheese"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_fries"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="FRENCH FRIES ->"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/textView_sumup_fries"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_mushroom"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="casual"
            android:gravity="center|start"
            android:text="STUFFED MUSHROOMS ->"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/textView_sumup_mushroom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="TextView"
            android:gravity="center"
            android:textSize="20sp"

            />
    </LinearLayout>
</LinearLayout>